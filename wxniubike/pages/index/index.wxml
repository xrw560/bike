<!--index.wxml
显示地图，其实是一个map标签
controls:地图中的控件按钮(图片）
markers:后台请求的数据
bindcontroltap:绑定事件

-->
<map id="map" 
scale="14" 
latitude="{{latitude}}"
longitude="{{longitude}}"
controls="{{controls}}" 
bindcontroltap="controltap" 
markers="{{markers}}" 
bindmarkertap="markertap" 
polyline="{{polyline}}" 
bindregionchange="regionchange" 
show-location 
style="width: 100%; height: 500px;">
</map>